<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".activities.TakeActionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="vertical"

        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_action_role"

            android:layout_width="96dp"
            android:layout_height="96dp"

            android:layout_marginTop="128dp"
            android:layout_marginBottom="12dp"

            android:layout_gravity="center_horizontal"

            tools:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/rolePixelart" />

        <TextView
            android:id="@+id/text_action_role"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:layout_gravity="center_horizontal"

            android:background="@color/grey_background_darker"

            android:textSize="@dimen/header_text_size"
            android:textColor="@color/text_fading"
            android:textAlignment="center"
            android:fontFamily="@font/unfunnyfont"

            tools:text="Emerytowany Glina"/>

        <TextView
            android:id="@+id/text_action_instruction"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"

            android:background="@color/grey_background_lighter"

            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_fading"
            android:textAlignment="textStart"
            android:fontFamily="@font/unfunnyfont"

            tools:text="Może zastrzelić kogoś w nocy. Jeśli osoba zastrzelona należy do miasta, następnej nocy popełnia samobójstwo."/>

        <LinearLayout
            android:id="@+id/linear_action_container"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="24dp"

            android:orientation="vertical" />

    </LinearLayout>

    <Button
        android:id="@+id/button_confirm_roles"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="64dp"

        android:layout_gravity="center"

        android:gravity="center"

        android:onClick="confirmAction"

        android:background="?attr/selectableItemBackground"

        android:fontFamily="@font/unfunnyfont"
        android:text="@string/confirmAction"
        android:textSize="@dimen/normal_text_size" />

</LinearLayout>