<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/linear_action_basic"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/grey_background_lighter" >

    <TextView
        android:id="@+id/text_action_flavour"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"

        android:layout_gravity="center_vertical"
        android:gravity="end"

        android:layout_weight="5"

        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/text_fading"
        android:textAlignment="viewEnd"
        android:fontFamily="@font/unfunnyfont"

        tools:text="Emerytowany Glina strzela do:"/>

    <TextView
        android:id="@+id/text_action_detail"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:paddingBottom="6dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"

        android:layout_gravity="center_vertical"
        android:gravity="center"

        android:layout_weight="2"

        android:textSize="@dimen/header_text_size"
        android:textColor="@color/text_fading"
        android:textAlignment="center"
        android:fontFamily="@font/unfunnyfont"

        tools:text="20"/>

</LinearLayout>