<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.unfunny.jester.mafiahelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/UnfunnyTheme"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".activities.TakeActionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActionTableActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ChooseRolesActivity"
            android:parentActivityName=".Startup"
            android:screenOrientation="portrait" />
        <activity android:name=".Startup">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>